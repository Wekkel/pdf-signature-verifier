<Window x:Class="PdfSignatureVerifier.App.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfSignatureVerifier.App"
        mc:Ignorable="d"
        Height="450" Width="800"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <DockPanel>
        <!-- Stock Picture on the Left -->
        <Image Source="about_box.jpg" Width="220" DockPanel.Dock="Left"/>

        <!-- Program Details on the Right -->
        <Border Padding="10" DockPanel.Dock="Right">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Width="513" >
                <!-- Give names to the TextBlocks -->
                <TextBlock x:Name="ProgramNameText" Text="Program Name: -" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="VersionText" Text="Version: -" Margin="0,0,0,10"/>
                <TextBlock x:Name="CopyrightText" Text="Copyright: -" Margin="0,0,0,10"/>

                <!-- Optional -->

                <!-- Display Revision History from a Local Text File -->
                <TextBox x:Name="VersionInfoText" Background="#FF3E5066" Foreground="White"
                         Padding="5" IsReadOnly="True" Height="270" TextWrapping="Wrap" Width="481" VerticalScrollBarVisibility="Auto">
                    <!-- Removed RenderTransform for simplicity, add back if needed -->
                    <!-- Load text file content here -->
                </TextBox>
                <Button Content="OK" Width="80" Height="29" HorizontalAlignment="Right" Margin="0,10,0,0"
                        IsCancel="True" Click="OkButton_Click"/>
                <!-- Set IsCancel=True -->
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
